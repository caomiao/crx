{
  "manifest_version": 2,

  "name": "Hello World",
  "description": "An addin for chrome.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "icons":{
    "48":"icon.png"
  },
  "background":{"scripts":["background.js"]},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "page_action":{
    "default_icon":{
	"19":"icon.png",
	"38":"icon.png"
    },
    "default_tile":"cm"
  }
}
